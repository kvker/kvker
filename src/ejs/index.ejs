<main class="container">
  <div id="input_box" class="row position-sticky my-sm-2" style="top: 48px; z-index: 1">
    <input class="col-sm-4 col-9 ml-2" id="search_input" placeholder="名称, 简述, 内容" autofocus />
    <button class="col-2 col-sm-1 ml-sm-2 btn btn-primary ml-2" id="search_btn">搜索</button>
    <button class="col-2 col-sm-1 ml-sm-2 btn btn-info d-none" id="refresh_btn">刷新</button>
    <button class="col-2 col-sm-1 ml-sm-2 btn btn-secondary d-none" id="add_btn" style="display: none">新增</button>
  </div>
  <div class="d-flex flex-wrap justify-content-between mx-2 mt-3 mt-sm-2" id="card_list"></div>
  <button class="position-fixed bg-white rounded-circle scroll-ctrl" onclick="javascript: document.documentElement.scrollTo(0, 0)">顶</button>
  <button class="position-fixed bg-white rounded-circle scroll-ctrl" onclick="javascript: document.documentElement.scrollTo(0, 1000000)">底</button>
</main>

